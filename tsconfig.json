{
    "compilerOptions": {
        "experimentalDecorators": true,
        "declaration": true,
        "module": "commonjs",
        "lib": ["dom"],
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "build",
        "strict": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "es2017",
        "types": ["node"],
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts"
    ]
}